generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  phone     String?
  attending String
  dietry_requirements String?
  comments String?
  friday_evening_attendance Boolean
  sunday_attendance Boolean
  guest_name      String
}

